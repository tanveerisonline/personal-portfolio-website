{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": 0,
    "eol-last": "off"
  },

  "ignorePatterns": ["dist/", "build/"]
}
